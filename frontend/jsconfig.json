{
    "compilerOptions": {
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}